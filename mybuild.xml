<?xml version="1.0"?>
<project basedir=".">

	<property name="server.home" value="D:\apache-tomcat-6.0.37" />
	<property name="jetspeed.portal.project" value="jetexpress-portal" />
	<property name="jetspeed.pa.project" value="jetexpress-pa" />

	<!-- ================================= 
	          target: build              
	         ================================= -->
	<target name="build" description="build" depends="deploy_pa,deploy_portal">

	</target>

	<target name="deploy_portal_decorations" description="copy jetexpress derectores file to server">
		<copy todir="${server.home}/webapps/jetexpress/decorations">
			<fileset dir="${basedir}/${jetspeed.portal.project}/src/main/webapp/decorations/">
				<include name="**" />
			</fileset>
		</copy>
	</target>

	<target name="deploy_portal_config">
		<copy todir="${server.home}/webapps/jetexpress/WEB-INF">
			<fileset dir="${basedir}/${jetspeed.portal.project}/src/main/webapp/WEB-INF/">
				<include name="**" />
			</fileset>
		</copy>
	</target>

	<target name="deploy_portal_class">
		<copy todir="${server.home}/webapps/jetexpress/WEB-INF/classes">
			<fileset dir="${basedir}/${jetspeed.portal.project}/target/classes/">
				<include name="**" />
			</fileset>
		</copy>
	</target>

	<target name="deploy_portal" depends="deploy_portal_decorations,deploy_portal_config,deploy_portal_class">
	</target>



	<target name="deploy_pa_config">
		<copy todir="${server.home}/webapps/jetexpress-pa/WEB-INF">
			<fileset dir="${basedir}/${jetspeed.pa.project}/src/main/webapp/WEB-INF/">
				<include name="**" />
			</fileset>
		</copy>
	</target>

	<target name="deploy_pa_class">
		<copy todir="${server.home}/webapps/jetexpress-pa/WEB-INF/classes">
			<fileset dir="${basedir}/${jetspeed.pa.project}/target/classes/">
				<include name="**" />
			</fileset>
		</copy>
	</target>


	<target name="deploy_pa" depends="deploy_pa_config,deploy_pa_class">
	</target>






</project>